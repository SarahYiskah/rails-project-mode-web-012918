<h1>Sign up</h1>
<%= form_for @user do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br><br>
<%= f.label :password, "Password" %><br>
<%= f.password_field :password %><br><br>
<%= f.label :password_confirmation, "Confirm Password" %>
<%= f.password_field :password_confirmation %>
<%= f.submit %>
<% end %>
